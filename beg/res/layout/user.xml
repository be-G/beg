<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/user_marble_imageView"
                android:background="@drawable/sphere_blue"
                android:layout_marginLeft="10dp"

                android:layout_gravity="center_vertical|right"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/user_name_text"
                    android:gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nome"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/user_distance_text"
                    android:gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp" android:text="20 m"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lo sanno tutti che so frocio!!"
            android:id="@+id/user_description_text"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
            <beg.widget.ImageViewProfile
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/user_image"
                    android:clickable="true"
                    android:id="@+id/photo_image_1" android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
            <beg.widget.ImageViewProfile
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/user_image"
                    android:clickable="true"
                    android:id="@+id/photo_image_2" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/photos_layout_under"
            android:gravity="center">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
            <beg.widget.ImageViewProfile
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_image"
                    android:clickable="true"
                    android:id="@+id/photo_image_3" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

            <beg.widget.ImageViewProfile
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_image"
                    android:clickable="true"
                    android:id="@+id/photo_image_4"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>